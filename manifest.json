{
    "manifest_version": 2,
    "name": "Tab Creator Extension",
    "version": "1.0",
    "description": "Create a new tab with a different URL based on the current tab's URL.",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon.png"
        }
    },
    "icons": {
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "popup.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ]
}